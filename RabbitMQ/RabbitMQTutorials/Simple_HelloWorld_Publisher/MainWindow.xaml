<Window x:Class="Simple_HelloWorld_Publisher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simple_HelloWorld_Publisher"
        mc:Ignorable="d"
        Title="PUBLISHER" Height="450" Width="500">
    <Grid>
        <Button x:Name="btnSend" Content="Send Message" HorizontalAlignment="Left" Margin="343,26,0,0" VerticalAlignment="Top" Click="btnSend_Click"/>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Margin="22,28,0,0" Text="Hello World" TextWrapping="Wrap" VerticalAlignment="Top" Width="301"/>
        <TextBox x:Name="txtLog" HorizontalAlignment="Center" Margin="0,78,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" VerticalAlignment="Top" Width="450" Height="250"/>

    </Grid>
</Window>
